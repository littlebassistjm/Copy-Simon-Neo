<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:weightSum="11"
    tools:context="ph.edu.dlsu.mobapde.copy_simon.MultiplayerActivity">

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_centerHorizontal="true"
        android:layout_alignParentTop="true">
        <TextView
            android:id="@+id/tv_score_label"
            android:text="Score"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="50sp"
            android:layout_marginTop="20dp"
            android:includeFontPadding="false"/>
        <TextView
            android:id="@+id/tv_scoreM1"
            android:text="0"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="50sp"
            android:layout_margin="20dp"
            android:includeFontPadding="false"/>
    </LinearLayout>
    <TextView
        android:id="@+id/tv_countrdown"
        android:gravity="center"
        android:text="0"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="50sp"
        android:layout_margin="20dp"
        android:layout_centerInParent="true"/>
<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:weightSum="2">
    <RelativeLayout
        android:id="@+id/side1"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:layout_alignParentStart="true">

        <ImageButton
            android:id="@+id/iv_greenM"
            android:layout_width="150dp"
            android:layout_height="150dp"
            android:layout_alignParentStart="true"
            android:background="@drawable/green_button_selector" />
        <ImageButton
            android:id="@+id/iv_yellowM"
            android:layout_width="150dp"
            android:layout_height="150dp"
            android:layout_alignParentBottom="true"
            android:background="@drawable/yellow_button_selector" />
    </RelativeLayout>
    <RelativeLayout
        android:id="@+id/side2"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:layout_alignParentEnd="true">
        <ImageButton
            android:id="@+id/iv_redM"
            android:layout_width="150dp"
            android:layout_height="150dp"
            android:layout_alignParentEnd="true"
            android:background="@drawable/red_button_selector" />
        <ImageButton
            android:id="@+id/iv_blueM"
            android:layout_width="150dp"
            android:layout_height="150dp"
            android:layout_alignParentBottom="true"
            android:layout_alignParentEnd="true"
            android:background="@drawable/blue_button_selector" />
    </RelativeLayout>
</LinearLayout>

</RelativeLayout>
